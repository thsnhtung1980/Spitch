name: Build APK from ZIP

on:
  push:
    branches:
      - main  # Chạy khi push lên nhánh main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up JDK 17
      uses: actions/setup-java@v3
      with:
        java-version: '17'

    - name: Unzip project
      run: unzip MyProject.zip -d project  # Giải nén file ZIP (thay MyProject.zip bằng tên file của bạn)

    - name: Grant execute permission for gradlew
      run: chmod +x project/gradlew  # Cấp quyền cho gradlew (nếu có trong ZIP)

    - name: Build with Gradle
      run: cd project && ./gradlew assembleDebug  # Build APK từ thư mục đã giải nén

    - name: Upload APK
      uses: actions/upload-artifact@v3
      with:
        name: app-debug.apk
        path: project/app/build/outputs/apk/debug/app-debug.apk
